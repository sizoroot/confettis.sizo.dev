{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@asset/*": ["src/assets/*"],
      "@style/*": ["src/styles/*"],
      "@interface/*": ["src/interfaces/*"],
      "@component/*": ["src/components/*"],
      "@layout/*": ["src/layouts/*"],
      "@page/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
    },

  }
}